<p id="notice"><%= notice %></p>

<h1>Отзывы ресторана <%= @restaurant.name %></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.title %></td>
        <td><%= review.body %></td>
        <td><%= review.restaurant %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Оставить отзыв', new_restaurant_review_path %>
