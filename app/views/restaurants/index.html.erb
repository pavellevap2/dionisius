<div class="row">
  <div class="col-lg-4">
     <%= search_form_for @search do |f| %>
        <div class="field">
          <%= f.label :name_cont %>
          <%= f.text_field :name_cont %>
          <%= f.check_box :cuisine => "Восточная" %>
        </div>
        <div class="actions">
          <%= f.submit "Найти!" %>
        </div>
      <% end %>



  </div>
  <div class="col-lg-8">
  <p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cuisine</th>
      <th>First title</th>
      <th>Description</th>
      <th>Avatar</th>
      <th>Specialization</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= link_to "#{restaurant.name}", restaurant_path(restaurant) %></td>
        <td><%= restaurant.cuisine %></td>
        <td><%= restaurant.first_title %></td>
        <td><%= restaurant.description %></td>
        <td><%= restaurant.avatar %></td>
        <td><%= restaurant.specialization %></td>
        <td><%= restaurant.rating %></td>
         <% restaurant.addresses.each do |address| %>
            <td> <%= address.title %> </td>
        <% end %>
        <td><%= link_to "Отзывы", restaurant_reviews_path(restaurant) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'На главную', root_path %>
</div>
</div>
