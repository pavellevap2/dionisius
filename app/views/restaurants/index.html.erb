<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cuisine</th>
      <th>First title</th>
      <th>Description</th>
      <th>Avatar</th>
      <th>Specialization</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= link_to "#{restaurant.name}", restaurant_path(restaurant) %></td>
        <td><%= restaurant.cuisine %></td>
        <td><%= restaurant.first_title %></td>
        <td><%= restaurant.description %></td>
        <td><%= restaurant.avatar %></td>
        <td><%= restaurant.specialization %></td>
        <td><%= restaurant.rating %></td>
         <% restaurant.addresses.each do |address| %>
            <td> <%= address.title %> </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant', new_restaurant_path %>
